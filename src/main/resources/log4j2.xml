<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
<!--             <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" /> -->
            <PatternLayout pattern="%-5level %-5p %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="Console" />
        </Root>
		<Logger name="org.survey" level="DEBUG"/>
		<Logger name="org.springframework" level="INFO"/>
		<Logger name="org.springmvc" level="DEBUG"/>
		<Logger name="DefaultCssErrorHandler" level="OFF" />
		<Logger name="com.gargoylesoftware" level="OFF" />
		<Logger name="com.hibernate" level="TRACE" />
    </Loggers>
</Configuration>
